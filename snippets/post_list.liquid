<div id="main" class="{% if request.template != 'post' %}post-list{% endif %}">
  {% if posts == empty and request.template != 'homepage' %}
    <h2>No posts found.</h2>
  {% endif %}

  {% for post in posts %}
    <div class="post-container">
      <article class="post">
        {% include 'post' %}

        <footer class="homepage-post-footer">
          {{ post | share_buttons_large }}
        </footer>
      </article>
    </div>
  {% endfor %}

  {% if posts.pagination %}
    <section class="pagination">
      {% slim_pagination %}
    </section>
  {% endif %}
</div>
