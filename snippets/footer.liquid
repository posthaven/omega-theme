{% if site.subscription_enabled? %}
  <section class="subscribe-footer">
    <div class="subscribe-wrapper show-button-on-keyup ignore-anon">
      {% form 'subscribe' include_prompt:false, show_instructions:true %}
    </div>
  </section>
{% endif %}


<footer class="footer">
    {% include 'bio' %}
    {% include 'contributors_section' %}
    {% include 'social' %}
    
    {% if site.navigation_menu and site.navigation_menu.items != empty %}
        {% include 'nav_menu' %}
      </section>
    {% endif %}

    <section class="search-archive">
      {% form 'archive' %}

       <div class="archive-link">
         <a href="{{ site.archive_url }}">Browse the archive</a>
       </div>
    </section>

    {% include 'blogroll' %}

    {% if site.tags.size > 0 %}
      <section id="tag_list_menu">
        <h4>Tags</h4>

        <ul class="tags">
          {% for t in site.tags %}
            {% if forloop.index > 5 %}
              <li class='hide'>
            {% else %}
              <li>
            {% endif %}
              {% if tag and tag == t.name %}
                <strong>{{ t.name }} <span>{{ t.post_count }}</span></strong>
              {% else %}
                <a href="{{ t.url }}">{{ t.name }} <span>{{ t.post_count }}</span></a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>

        {% if site.tags.size > 5 %}
          <div class="show-all-tags">
            See all {{ site.tags.size }} tags
          </div>
        {% endif %}
      </section>
    {% endif %}

</footer>
<div class="logo-spacer"></div>
